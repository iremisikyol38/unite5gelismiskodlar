<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/Arackapisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="130dp"
        android:text="Araç Kapısı"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Arabahiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Araba Hiz"
        app:layout_constraintStart_toStartOf="@+id/Arackapisi"
        app:layout_constraintTop_toBottomOf="@+id/Arackapisi" />

    <Button
        android:id="@+id/Arabacalistir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Araba Çalıştır"
        app:layout_constraintStart_toStartOf="@+id/Arabahiz"
        app:layout_constraintTop_toBottomOf="@+id/Arabahiz" />

    <Button
        android:id="@+id/Arabaisegit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Araba İşe Git"
        app:layout_constraintStart_toStartOf="@+id/Arabacalistir"
        app:layout_constraintTop_toBottomOf="@+id/Arabacalistir" />

    <Button
        android:id="@+id/minibuskapi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Minibus kapı"
        app:layout_constraintStart_toStartOf="@+id/Arabaisegit"
        app:layout_constraintTop_toTopOf="@+id/Arabaisegit" />

    <Button
        android:id="@+id/minibushiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="Minibus Hız"
        app:layout_constraintBottom_toTopOf="@+id/minibuscalistir"
        app:layout_constraintStart_toStartOf="@+id/minibuskapi" />

    <Button
        android:id="@+id/minibuscalistir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:text="Minibus Çalıştır"
        app:layout_constraintStart_toStartOf="@+id/minibushiz"
        app:layout_constraintTop_toBottomOf="@+id/minibuskapi" />

    <Button
        android:id="@+id/minibusisegit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="Minibus İşe Git"
        app:layout_constraintStart_toStartOf="@+id/minibuscalistir"
        app:layout_constraintTop_toTopOf="@+id/minibuscalistir" />

    <TextView
        android:id="@+id/bilgi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/minibusisegit"
        app:layout_constraintTop_toBottomOf="@+id/minibusisegit" />
</androidx.constraintlayout.widget.ConstraintLayout>